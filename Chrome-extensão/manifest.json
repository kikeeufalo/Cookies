{
    "manifest_version": 3,
    "name": "Monitor de Cookies",
    "version": "1.0",
    "description": "Armazena todos os cookies dos sites em um sรณ lugar.",
    "permissions": [
      "cookies",
      "storage",
      "activeTab",
      "scripting"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "host_permissions": [
      "<all_urls>"
    ],
    "action": {
      "default_popup": "popup/popup.html"
    }
}